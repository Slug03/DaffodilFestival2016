<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/daffodilFestivalLogo"
                android:contentDescription="@string/dfLogo"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/df_logo"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/thirtyYears"
                android:layout_weight="1.75"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|center_vertical"
                android:text="@string/welcome"
                android:textSize="50sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/landingImage"
                android:contentDescription="@string/landingImage"
                android:layout_weight="4.25"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/landing_image"/>
        </LinearLayout>

</FrameLayout>
